{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/lqxc-org/collects/blob/main/scripts/gh-actions/pattern-check.schema.json",
  "title": "Pattern Check Configuration",
  "description": "Configuration file for the pattern-check script that enforces coding standards via ast-grep and ripgrep",
  "type": "object",
  "required": ["version", "rules"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference for editor support"
    },
    "version": {
      "type": "integer",
      "description": "Configuration file version",
      "const": 1
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of this configuration"
    },
    "rules": {
      "type": "array",
      "description": "List of pattern check rules",
      "items": {
        "$ref": "#/definitions/Rule"
      }
    }
  },
  "definitions": {
    "Rule": {
      "type": "object",
      "description": "A single pattern check rule",
      "required": [
        "id",
        "pattern",
        "files",
        "severity",
        "message",
        "explanation"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for this rule (e.g., 'no-println-in-lib')",
          "pattern": "^[a-z][a-z0-9-]*$"
        },
        "type": {
          "type": "string",
          "description": "Type of pattern matching: 'regex' uses ripgrep (default), 'ast' uses ast-grep for semantic matching",
          "enum": ["regex", "ast"],
          "default": "regex"
        },
        "pattern": {
          "type": "string",
          "description": "Pattern to search for: regex pattern for type='regex', ast-grep pattern for type='ast'"
        },
        "language": {
          "type": "string",
          "description": "Language for ast-grep patterns (required when type='ast'). E.g., 'rust', 'typescript', 'python'",
          "enum": [
            "rust",
            "typescript",
            "javascript",
            "python",
            "go",
            "java",
            "c",
            "cpp",
            "csharp",
            "kotlin",
            "swift",
            "ruby",
            "html",
            "css",
            "json",
            "yaml",
            "toml"
          ]
        },
        "files": {
          "type": "array",
          "description": "Glob patterns for files to check (e.g., ['**/*.rs', '**/*.ts'])",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "exclude": {
          "type": "array",
          "description": "Glob patterns for files to exclude from checking",
          "items": {
            "type": "string"
          }
        },
        "severity": {
          "type": "string",
          "description": "Severity level: 'error' fails CI, 'warning' is informational",
          "enum": ["error", "warning"]
        },
        "message": {
          "type": "string",
          "description": "Short message describing the violation"
        },
        "explanation": {
          "type": "string",
          "description": "Detailed explanation of why this pattern is forbidden and what to use instead"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
